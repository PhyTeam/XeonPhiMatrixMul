CC   = icc
CCFLAGS    = -openmp -mmic -std=c99
OPTFLAGS   = -O3
LIBS       = -L/opt/intel/lib/mic -Wno-unknown-pragmas
EXECS      = run
OBJECTS = openmp-offload.c

run:$(OBJECTS)
  $(CC) $(OPTFLAGS) -o $@ $(OBJECTS) $(CCFLAGS) $(LIBS) -lm -mkl


.c.o:
  $(CC) -c $(OPTFLAGS) $(CCFLAGS) $<
clean:
  \rm -rf *.o run
